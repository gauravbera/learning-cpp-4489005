{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++", // g++ compiler
            "args": [                    // set of args sent to compiler
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",             // standard to support
                "${fileDirname}/*.cpp",   // source files to compiler. All cpp files 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "presentation": {
              "reveal": "always",
              "focus": true
            }
        }
    ],
    "version": "2.0.0"
}
